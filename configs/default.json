{
    "name": "bestguess",
    "tag": "bert_embeds",
    "env": {
        "cuda": true,
        "data_path": "./data",
        "gpu_device": 0

    },
    "training": {
        "dataset": "squad",
        "use_preprocessed_data": true,
        "log_interval": 10,
        "lr_schedule": true,
        "lr": 5e-3,
        "beta1": 0.9,
        "beta2": 0.98,
        "batch_size": 8,
        "optim_batch_size": 64,
        "clip_gradient": 5,
        "num_epochs": 50,
        "opt": "adam",
        "warmup_epochs": 5,
        "suppression_loss_weight": 0.1,
        "label_smoothing": "UNUSED",
        "early_stopping_lag": 3
    },
    "eval": {
        "eval_batch_size": 8

    },
    "beam_search": {
        "beam_width": 8,
        "beam_expansion": 4,
        "length_alpha": 2.0
    },
    "prepro": {
        "vocab_size": 30522,
        "sent_window": 0,
        "tok_window": 300,
        "concat_ctxt_ans": false,
        "bio_tagging": true
    },

    "dropout": 0.1,

    "raw_embedding_dim": 768,
    "embedding_dim": 768,
    "onehot_bio" : false,
    "bio_embedding_dim": 8,
    "freeze_embeddings": true,
    "freeze_projection": true,
    "directional_masks": true,

    "encoder_outputs": {
        "c_raw": true,
        "a_raw": false,
        "c_enc": true,
        "c_enc_pool": false,
        "a_enc": false,
        "a_enc_pool": false,
        "c_enc_anspool": false,
        "c_ans_labels": false
    },
    "encdec": {
        "num_encoder_layers": 5,
        "num_decoder_layers": 5,
        "num_heads": 4,
        "dim_feedforward": 2048,
        "activation": "relu",
        "bert_encoder": false,
        "bert_model": "bert-base-uncased",
        "bert_warmup_epochs": 20,
        "bert_finetune": false
    }
}