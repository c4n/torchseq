{
    "name": "default",
    "env": {
        "cuda": true,
        "data_path": "./data",
        "gpu_device": 0

    },
    "training": {
        "dataset": "newsqa",
        "use_preprocessed_data": false,
        "log_interval": 10,
        "lr_schedule": true,
        "lr": 1e-4,
        "batch_size": 64,
        "clip_gradient": 5,
        "num_epochs": 70,
        "opt": "adam",
        "warmup_epochs": 20
    },
    "eval": {
        "eval_batch_size": 16

    },
    "beam_search": {
        "beam_width": 12,
        "beam_expansion": 4,
        "length_alpha": 0.5
    },
    "prepro": {
        "vocab_size": 10000
    },

    "dropout": 0.2,

    "embedding_dim": 300,
    "onehot_bio" : false,
    "bio_embedding_dim": 8,
    "freeze_embeddings": false,
    "freeze_projection": false,
    "directional_masks": true,

    "encoder_outputs": {
        "c_raw": true,
        "a_raw": false,
        "c_enc": true,
        "c_enc_pool": false,
        "a_enc": false,
        "a_enc_pool": false,
        "c_enc_anspool": false
    },
    "encdec": {
        "num_encoder_layers": 5,
        "num_decoder_layers": 5,
        "num_heads": 4,
        "dim_feedforward": 2048,
        "activation": "relu"
    }
}